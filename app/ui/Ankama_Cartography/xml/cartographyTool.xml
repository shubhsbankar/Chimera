<Definition>
	<Import url="[config.mod.template]window.xml" />
	<Import url="[config.mod.template]button/simpleButton.xml" />
	<Import url="mod://Ankama_Cartography/xml/inputField.xml" />

	<Constants>
		<Constant name="assets" value="[config.ui.skin]assets.swf|" />
		<Constant name="bitmap" value="[config.ui.skin]bitmap/" />
		<Constant name="css" value="[config.ui.skin]css/" />
		<Constant name="texture" value="[config.ui.skin]texture/" />
	</Constants>

	<window name="main" movable="true" noHelpButton="true">
		<title>Modifications</title>
		<Size>
			<AbsDimension x="300" y="320" />
		</Size>
		<Content>
			<Texture name="tx_help">
				<uri>[local.texture]help_icon_normal.png</uri>
				<Anchors> 
					<Anchor>
						<AbsDimension x="10" y="10" />
					</Anchor>
				</Anchors>
				<Size>
					<AbsDimension x="22" y="22" />
				</Size>
				<Hooks>
					<onRollOver />
					<onRollOut />
				</Hooks>
			</Texture> 
			<Container>
				<Label>
					<Anchors>
						<Anchor>
							<AbsDimension x="0" y="10" />
						</Anchor>
					</Anchors>
					<Size>
						<AbsDimension y="25" x="150" />
					</Size>
					<text>Map ID</text>
					<cssClass>right</cssClass>
					<css>[local.css]normal2.css</css>
				</Label>
				
				<inputField name="input_mapId">
					<Anchors>
						<Anchor relativeTo="$LAST" relativePoint="TOPRIGHT">
							<AbsDimension y="-8" />
						</Anchor>
					</Anchors>
				</inputField>
			</Container>
			<Container>
				<Anchors>
					<Anchor relativeTo="$LAST" relativePoint="BOTTOMLEFT">
						<AbsDimension y="-8" />
					</Anchor>
				</Anchors>
				<Label>
					<Anchors>
						<Anchor>
							<AbsDimension x="0" y="10" />
						</Anchor>
					</Anchors>
					<Size>
						<AbsDimension y="25" x="150" />
					</Size>
					<text>Single map width</text>
					<cssClass>right</cssClass>
					<css>[local.css]normal2.css</css>
				</Label>
				
				<inputField name="input_mapWidth">
					<Anchors>
						<Anchor relativeTo="$LAST" relativePoint="TOPRIGHT">
							<AbsDimension y="-8" />
						</Anchor>
					</Anchors>
				</inputField>
			</Container>
			<Container>
				<Anchors>
					<Anchor relativeTo="$LAST" relativePoint="BOTTOMLEFT">
						<AbsDimension y="-8" />
					</Anchor>
				</Anchors>
				<Label>
					<Anchors>
						<Anchor>
							<AbsDimension x="0" y="10" />
						</Anchor>
					</Anchors>
					<Size>
						<AbsDimension y="25" x="150" />
					</Size>
					<text>Single map height</text>
					<cssClass>right</cssClass>
					<css>[local.css]normal2.css</css>
				</Label>
				
				<inputField name="input_mapHeight">
					<Anchors>
						<Anchor relativeTo="$LAST" relativePoint="TOPRIGHT">
							<AbsDimension y="-8" />
						</Anchor>
					</Anchors>
				</inputField>
			</Container>
			<Container>
				<Anchors>
					<Anchor relativeTo="$LAST" relativePoint="BOTTOMLEFT">
						<AbsDimension y="-8" />
					</Anchor>
				</Anchors>
				<Label>
					<Anchors>
						<Anchor>
							<AbsDimension x="0" y="10" />
						</Anchor>
					</Anchors>
					<Size>
						<AbsDimension y="25" x="150" />
					</Size>
					<text>Origine X</text>
					<cssClass>right</cssClass>
					<css>[local.css]normal2.css</css>
				</Label>
				
				<inputField name="input_originX">
					<Anchors>
						<Anchor relativeTo="$LAST" relativePoint="TOPRIGHT">
							<AbsDimension y="-8" />
						</Anchor>
					</Anchors>
				</inputField>
			</Container>
			<Container>
				<Anchors>
					<Anchor relativeTo="$LAST" relativePoint="BOTTOMLEFT">
						<AbsDimension y="-8" />
					</Anchor>
				</Anchors>
				<Label>
					<Anchors>
						<Anchor>
							<AbsDimension x="0" y="10" />
						</Anchor>
					</Anchors>
					<Size>
						<AbsDimension y="25" x="150" />
					</Size>
					<text>Origine Y</text>
					<cssClass>right</cssClass>
					<css>[local.css]normal2.css</css>
				</Label>
				
				<inputField name="input_originY">
					<Anchors>
						<Anchor relativeTo="$LAST" relativePoint="TOPRIGHT">
							<AbsDimension y="-8" />
						</Anchor>
					</Anchors>
				</inputField>
			</Container>
			
			<simpleButton name="btn_import">
				<label>Calculs</label>
				<Anchors>
					<Anchor relativeTo="$LAST" relativePoint="BOTTOM" point="TOP" >
						<AbsDimension y="8" />
					</Anchor>
				</Anchors>
				<Size>
					<AbsDimension x="150" />
				</Size>
			</simpleButton>
			
			<simpleButton name="btn_reset">
				<label>Reset</label>
				<Anchors>
					<Anchor relativeTo="$LAST" relativePoint="BOTTOM" point="TOP" >
						<AbsDimension y="8" />
					</Anchor>
				</Anchors>
				<Size>
					<AbsDimension x="150" />
				</Size>
			</simpleButton>
			
		</Content> 
	</window>
</Definition>