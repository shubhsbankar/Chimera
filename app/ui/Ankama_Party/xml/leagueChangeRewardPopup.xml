<?xml version="1.0" encoding="UTF-8"?>
<Definition labelDebug="false" modal="true" setOnTopOnClick="false">
	<Import url="[config.mod.template.button]themeIconTextButton.xml" />
	<Import url="[config.mod.template]windowWithoutTitleBar.xml" />
	<Import url="[config.mod.template]button/simpleButton.xml" />
	
   <Constants>
		<Constant name="assets" value="[config.ui.skin]assets.swf|" />
		<Constant name="css" value="[config.ui.skin]css/" />
		<Constant name="illus" value="[config.content.path]gfx/illusUi/" />
	   <Constant name="levelUp" value="[config.ui.skin]texture/levelup/"/>
   </Constants>

	<windowWithoutTitleBar name="leagueChangeRewards" bgThemeDataId="block_background_dark" noCloseButton="true">
		<Anchors>
			<Anchor point="CENTER" relativePoint="CENTER">
				<AbsDimension y="160" />
			</Anchor>
		</Anchors>
		<Size>
			<AbsDimension x="680" y="200"/>
		</Size>
		<bgAlpha>1</bgAlpha>
		<mouseEnabled>true</mouseEnabled>

		<Content>
			<Label name="lbl_title">
				<Anchors>
					<Anchor relativePoint="TOP" point="TOP">
						<AbsDimension x="0" y="35"/>
					</Anchor>
				</Anchors>
				<Size>
					<AbsDimension x="628" y="20"/>
				</Size>
				<cssClass>boldcenter</cssClass>
				<css>[local.css]normal2.css</css>
			</Label>

			<Label name="lbl_content">
				<Anchors>
					<Anchor relativePoint="TOP" point="TOP">
						<AbsDimension x="0" y="75"/>
					</Anchor>
				</Anchors>
				<Size>
					<AbsDimension x="628" y="50"/>
				</Size>
				<multiline>true</multiline>
				<wordWrap>true</wordWrap>
				<cssClass>center</cssClass>
				<verticalAlign>center</verticalAlign>
				<css>[local.css]normal2.css</css>
				<hyperlinkEnabled>true</hyperlinkEnabled>
				<useStyleSheet>true</useStyleSheet>
			</Label>
		</Content>

		<OverFrameContent>
			<!--La banniÃ¨re-->
			<TextureBitmap name="tx_banner">
				<Anchors>
					<Anchor relativePoint="TOP" point="BOTTOM">
						<AbsDimension x="0" y="48"/>
					</Anchor>
				</Anchors>
				<Size>
					<AbsDimension x="600" y="136" />
				</Size>
				<themeDataId>levelup_banner</themeDataId>
				<smooth>true</smooth>
			</TextureBitmap>

			<Label name="lbl_endSeasonRank">
				<Anchors>
					<Anchor relativePoint="TOP" point="TOP">
						<AbsDimension x="0" y="-62"/>
					</Anchor>
				</Anchors>
				<Size>
					<AbsDimension x="300"/>
				</Size>
				<cssClass>levelup</cssClass>
				<css>[local.css]title.css</css>
				<forceUppercase>true</forceUppercase>
			</Label>

			<TextureBitmap name="tx_bg_button">
				<Anchors>
					<Anchor relativePoint="BOTTOM" point="TOP">
						<AbsDimension x="0" y="-19"/>
					</Anchor>
				</Anchors>
				<Size>
					<AbsDimension x="150" />
				</Size>
				<themeDataId>background_border_button</themeDataId>
			</TextureBitmap>

			<simpleButton name="btn_close_main">
				<Anchors>
					<Anchor relativePoint="BOTTOM" point="TOP">
						<AbsDimension x="0" y="-12" />
					</Anchor>
				</Anchors>
				<Size>
					<AbsDimension x="100" y="32" />
				</Size>
				<label>[ui.common.ok]</label>
			</simpleButton>
		</OverFrameContent>
	</windowWithoutTitleBar>
</Definition>