<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Definition SYSTEM "../dtd/ui.dtd" >
<Definition labelDebug="false" debug="false">
	<Import url="[config.mod.template]window.xml" />
	<Import url="[config.mod.template]block.xml" />
	<Import url="[config.mod.template]button/themeIconTextButton.xml" />

	<Constants>
		<Constant name="css" value="[config.ui.skin]css/" />
		<Constant name="texture" value="[config.ui.skin]texture/" />
        <Constant name="spells_uri" value="[config.content.path]gfx/spells/all.swf|sort_" />
		<Constant name="common" value="[config.ui.skin]common/" />

		<Constant name="budget_uri" value="[local.texture]icon_spiral.png" />
		<Constant name="fragments_uri" value="[local.texture]icon_fragment.png" />

		<Constant name="btnBuyRewardCenterX" value="370" type="int" />
		<Constant name="rewardLabelPricePosTopY" value="10" type="int" />
		<Constant name="saveLabelPricePosTopY" value="10" type="int" />
		<Constant name="rewardCurrencyPosTopY" value="12" type="int" />
		<Constant name="txBudgetSize" value="22" type="int" />
	</Constants>

	<window noCloseButton="true">
		<Anchors>
			<Anchor point="TOPLEFT" relativePoint="TOPLEFT">
				<AbsDimension x="0" y="30" />
			</Anchor>
		</Anchors>
		<Size>
			<AbsDimension x="460" y="425" />
		</Size>
		<title>[ui.breach.shop]</title>
		<movable>true</movable>
		<hintAvailable>true</hintAvailable>

		<Content>
			<block>
				<Anchors>
					<Anchor>
						<AbsDimension x="0" y="3" />
					</Anchor>
				</Anchors>
				<Size>
					<AbsDimension x="420" y="352" />
				</Size>
				<Content>
					<Texture>
						<Anchors>
							<Anchor>
								<AbsDimension x="0" y="0" />
							</Anchor>
						</Anchors>
						<Size>
							<AbsDimension x="415" y="355" />
						</Size>
						<uri>[local.common]bg_dark.png</uri>
					</Texture>
					<Texture>
						<Anchors>
							<Anchor>
								<AbsDimension x="0" y="0" />
							</Anchor>
						</Anchors>
						<uri>[local.common]corner_decoration.png</uri>
					</Texture>
					<Texture>
						<Anchors>
							<Anchor>
								<AbsDimension x="410" y="0" />
							</Anchor>
						</Anchors>
						<uri>[local.common]corner_decoration.png</uri>
						<scaleX>-1</scaleX>
					</Texture>

					<Label name="lbl_budget">
						<Anchors>
							<Anchor point="TOP" relativePoint="TOP">
								<AbsDimension x="-90" y="15" />
							</Anchor>
						</Anchors>
						<Size>
							<AbsDimension x="130" y="22" />
						</Size>
						<verticalAlign>center</verticalAlign>
						<css>[local.css]title.css</css>
						<cssClass>whiteboldright</cssClass>
					</Label>
					<TextureBitmap name="tx_budget">
						<Anchors>
							<Anchor point="LEFT" relativePoint="RIGHT" relativeTo="lbl_budget">
								<AbsDimension x="5" y="-2" />
							</Anchor>
						</Anchors>
						<Size>
							<AbsDimension x="[local.txBudgetSize]" y="[local.txBudgetSize]" />
						</Size>
						<uri>[local.texture]icon_spiral.png</uri>
						<smooth>true</smooth>
					</TextureBitmap>

					<Label name="lbl_fragments">
						<Anchors>
							<Anchor point="TOP" relativePoint="TOP">
								<AbsDimension x="50" y="15" />
							</Anchor>
						</Anchors>
						<Size>
							<AbsDimension x="130" y="22" />
						</Size>
						<text>12345</text>
						<verticalAlign>center</verticalAlign>
						<css>[local.css]title.css</css>
						<cssClass>whiteboldright</cssClass>
					</Label>
					<TextureBitmap name="tx_fragments">
						<Anchors>
							<Anchor point="LEFT" relativePoint="RIGHT" relativeTo="lbl_fragments">
								<AbsDimension x="5" y="-2" />
							</Anchor>
						</Anchors>
						<Size>
							<AbsDimension x="[local.txBudgetSize]" y="[local.txBudgetSize]" />
						</Size>
						<uri>[local.texture]icon_fragment.png</uri>
						<smooth>true</smooth>
					</TextureBitmap>

					<block>
						<Anchors>
							<Anchor>
								<AbsDimension x="0" y="50" />
							</Anchor>
						</Anchors>
						<Size>
							<AbsDimension x="410" y="292" />
						</Size>
						<Content>
                            <Texture>
                                <Size>
                                    <AbsDimension x="400" y="40" />
                                </Size>
                                <bgColor>[colors.grid.bg]</bgColor>
                            </Texture>

							<Label name="lbl_save">
								<Anchors>
									<Anchor>
										<AbsDimension x="5" y="10" />
									</Anchor>
								</Anchors>
								<Size>
									<AbsDimension x="220" y="22" />
								</Size>
								<text>[ui.breach.save]</text>
								<verticalAlign>center</verticalAlign>
								<css>[local.css]normal2.css</css>
								<cssClass>darkleft</cssClass>
							</Label>

							<Button name="btn_buySave">
								<Common>
									<Anchors>
										<Anchor>
											<AbsDimension x="275" y="7" />
										</Anchor>
									</Anchors>
									<TextureBitmap name="tx_bgBtnBuySave">
										<Size>
											<AbsDimension x="120" y="26" />
										</Size>
										<themeDataId>button_normal</themeDataId>
									</TextureBitmap>
								</Common>
								<State type="OVER">
									<SetProperties target="tx_bgBtnBuySave">
										<themeDataId>button_over</themeDataId>
									</SetProperties>
								</State>
								<State type="PRESSED">
									<SetProperties target="tx_bgBtnBuySave">
										<themeDataId>button_pressed</themeDataId>
									</SetProperties>
								</State>
								<State type="DISABLED">
									<SetProperties target="tx_bgBtnBuySave">
										<themeDataId>button_disabled</themeDataId>
									</SetProperties>
								</State>
							</Button>
							<Label name="lbl_savePrice">
								<Size>
									<AbsDimension x="80" y="20" />
								</Size>
								<cssClass>darkboldright</cssClass>
								<css>[local.css]normal2.css</css>
								<verticalAlign>center</verticalAlign>
							</Label>
							<Texture name="tx_saveCurrency">
								<Anchors>
									<Anchor point="LEFT" relativePoint="RIGHT" relativeTo="lbl_savePrice">
										<AbsDimension x="4" y="0" />
									</Anchor>
								</Anchors>
								<Size>
									<AbsDimension x="17" y="17" />
								</Size>
								<uri>[local.budget_uri]</uri>
							</Texture>
							<Texture name="tx_saveBought">
								<Anchors>
									<Anchor>
										<AbsDimension x="320" y="5" />
									</Anchor>
								</Anchors>
								<Size>
									<AbsDimension x="30" y="30" />
								</Size>
								<uri>[local.texture]icon_check.png</uri>
							</Texture>

							<Grid name="gd_rewards">
								<Anchors>
									<Anchor>
										<AbsDimension x="0" y="40" />
									</Anchor>
								</Anchors>
								<Size>
									<AbsDimension x="400" y="240" />
								</Size>
								<rendererName>InlineXmlGridRenderer</rendererName>
								<rendererArgs>updateRewards,[colors.grid.line],[colors.grid.bg]</rendererArgs>
								<scrollDisplay>none</scrollDisplay>
								<slotWidth>400</slotWidth>
								<slotHeight>40</slotHeight>
								<Container name="ctr_reward">
									<Label name="lbl_rewardName">
										<Anchors>
											<Anchor>
												<AbsDimension x="5" y="10" />
											</Anchor>
										</Anchors>
										<Size>
											<AbsDimension x="200" y="20" />
										</Size>
										<verticalAlign>center</verticalAlign>
										<cssClass>darkleft</cssClass>
										<css>[local.css]normal2.css</css>
									</Label>

									<Texture name="tx_warning">
										<Anchors>
											<Anchor>
												<AbsDimension x="243" y="7" />
											</Anchor>
										</Anchors>
										<Size>
											<AbsDimension x="25" y="25" />
										</Size>
										<uri>[local.texture]pin_mark_yellow.png</uri>
									</Texture>

									<Button name="btn_buyReward">
										<Common>
											<Anchors>
												<Anchor>
													<AbsDimension x="275" y="7" />
												</Anchor>
											</Anchors>
											<TextureBitmap name="tx_bgBtnBuyReward">
												<Size>
													<AbsDimension x="120" y="26" />
												</Size>
												<themeDataId>button_normal</themeDataId>
											</TextureBitmap>
										</Common>
										<State type="OVER">
											<SetProperties target="tx_bgBtnBuyReward">
												<themeDataId>button_over</themeDataId>
											</SetProperties>
										</State>
										<State type="PRESSED">
											<SetProperties target="tx_bgBtnBuyReward">
												<themeDataId>button_pressed</themeDataId>
											</SetProperties>
										</State>
										<State type="DISABLED">
											<SetProperties target="tx_bgBtnBuyReward">
												<themeDataId>button_disabled</themeDataId>
											</SetProperties>
										</State>
									</Button>
									<Label name="lbl_rewardPrice">
										<Size>
											<AbsDimension x="90" y="20" />
										</Size>
										<cssClass>darkboldright</cssClass>
										<css>[local.css]normal2.css</css>
										<verticalAlign>center</verticalAlign>
									</Label>
									<Texture name="tx_rewardCurrency">
										<Size>
											<AbsDimension x="17" y="17" />
										</Size>
									</Texture>
									<Texture name="tx_rewardBought">
										<Anchors>
											<Anchor>
												<AbsDimension x="320" y="5" />
											</Anchor>
										</Anchors>
										<Size>
											<AbsDimension x="30" y="30" />
										</Size>
										<uri>[local.texture]icon_check.png</uri>
										<visible>false</visible>
									</Texture>
								</Container>
							</Grid>
						</Content>
					</block>
				</Content>
			</block>
		</Content>
	</window>
</Definition>