<?xml version="1.0" encoding="UTF-8"?>
<Definition modal="true">
   <Constants>
		<Constant name="assets" value="[config.ui.skin]assets.swf|" />
       <Constant name="css" value="[config.ui.skin]css/" />
   </Constants>

    <Import url="[config.mod.template.button]simpleButton.xml" />
    <Import url="[config.mod.template.button]iconButton.xml" />
    <Import url="[config.mod.template]windowWithoutTitleBar.xml"/>
    

	<Container name="mainCtr">
		
		<Anchors>
			<Anchor point="CENTER" relativePoint="CENTER" />
		</Anchors>
		
		<windowWithoutTitleBar name="popup">
			<Size>
				<AbsDimension x="550" y="228"/>
			</Size>
			
			<Content>
				
				<!-- simpleButton btnOk-->

				<simpleButton name="btn_ok">
					<Anchors>
						<Anchor relativePoint="BOTTOM" point="BOTTOM">
							<AbsDimension x="0" y="-20" />
						</Anchor>
					</Anchors>			
					<Size>
						<AbsDimension x="122" y="30" />
					</Size>
					<label>[ui.common.ok]</label>
				</simpleButton>
		
				<!-- Label lblDescription-->
		
				<Label name="lbl_description">
					<Anchors>
						<Anchor relativePoint="TOP" point="TOP">
							<AbsDimension x="0" y="40" />
						</Anchor>
					</Anchors>
					<Size>
						<AbsDimension x="500" y="50" />
					</Size>
					<wordWrap>true</wordWrap>
					<cssClass>center</cssClass>
					<css>[local.css]normal2.css</css>
				</Label>
		
		
				<!-- Label lbl_input-->
				
				<TextureBitmap>
					<Anchors>
						<Anchor relativePoint="TOP" point="TOP">
							<AbsDimension x="0" y="80" />
						</Anchor>
					</Anchors>
					<Size>
						<AbsDimension x="286" y="35" />
					</Size>
					<themeDataId>bg_small_border_dark</themeDataId>
				</TextureBitmap>
		
				<Input name="lbl_input">
					<Anchors>
						<Anchor relativePoint="TOP" point="TOP">
							<AbsDimension x="0" y="84" />
						</Anchor>
					</Anchors>
					<Size>
						<AbsDimension x="236" y="25" />
					</Size>
					<cssClass>center</cssClass>
					<css>[local.css]normal2.css</css>
				</Input>
			</Content>
		</windowWithoutTitleBar>
		
	</Container>
</Definition>
