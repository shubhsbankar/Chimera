<iconButton>
	
	<!-- Parametres du template -->
	<Param name="Size" />
	<Param name="name" />
	<Param name="Anchors" />
	<Param name="Hooks"><onRelease /></Param>
	<Param name="uri" />
	<Param name="radioGroup"></Param>
	<Param name="selected">false</Param>
	<Param name="radioMode">false</Param>
	<Param name="checkBox">false</Param>
	<Param name="autoGrid">false</Param>
	<Param name="disabled">false</Param>
	<Param name="visible">true</Param>
	
	<!-- Variables internes au template -->	
	<Var name="bgTextureName">'bgTexture' + '#name'</Var>
	
	<Button name="#name">
		<Common>
			<visible>#visible</visible>
			<disabled>#disabled</disabled>
			<checkBox>#checkBox</checkBox>
			<Size>
				#Size
			</Size>
			
			<radioGroup>#radioGroup</radioGroup>
			<radioMode>#radioMode</radioMode>
			<selected>#selected</selected>
			
			<Anchors>#Anchors</Anchors>
			
			<Texture strata="LOW" name="$bgTextureName">
				<Size>
					#Size
				</Size>
				<autoGrid>#autoGrid</autoGrid>
				<uri>#uri</uri>
			</Texture>
			
			<Hooks>#Hooks</Hooks>
		</Common>
		
		<State type="OVER">
			<SetProperties target="$bgTextureName">
				<gotoAndStop>over</gotoAndStop>
			</SetProperties>
		</State>
		
		<State type="PRESSED">
			<SetProperties target="$bgTextureName">
				<gotoAndStop>pressed</gotoAndStop>
			</SetProperties>
		</State>
		
		<State type="DISABLED">
			<SetProperties target="$bgTextureName">
				<gotoAndStop>disabled</gotoAndStop>
			</SetProperties>
		</State>
		
		<State type="SELECTED">
			<SetProperties target="$bgTextureName">
				<gotoAndStop>selected</gotoAndStop>
			</SetProperties>
		</State>
		
		<State type="SELECTED_OVER">
			<SetProperties target="$bgTextureName">
				<gotoAndStop>selected_over</gotoAndStop>
			</SetProperties>
		</State>
		
		<State type="SELECTED_PRESSED">
			<SetProperties target="$bgTextureName">
				<gotoAndStop>selected_pressed</gotoAndStop>
			</SetProperties>
		</State>
	</Button>
	
</iconButton>