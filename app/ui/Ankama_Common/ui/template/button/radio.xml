<radio>
	
	<!-- Parametres du template -->
	<Param name="Size" >
		<AbsDimension x="16" y="16" />
	</Param>
	<Param name="name" />
	<Param name="radioGroup" ></Param>
	<Param name="Anchors" />
	<Param name="Hooks"><onRelease /></Param>
	<Param name="selected">false</Param>
	
	<!-- Variables internes au template -->
	<Var name="textureName">'btn_texture_' + '#name'</Var>
	
	<Button name="#name">
		<Common>
			<radioGroup>#radioGroup</radioGroup>
			<radioMode>true</radioMode>
			<Anchors>#Anchors</Anchors>
			<Texture strata="LOW" name="$textureName">
				<Size>
					#Size
				</Size>
				<gotoAndStop>normal</gotoAndStop>
				<uri>[local.assets]tx_radioButton</uri>
			</Texture>
			
			<Hooks>#Hooks</Hooks>
		</Common>
		
		<State type="OVER">
			<SetProperties target="$textureName">
				<gotoAndStop>over</gotoAndStop>
			</SetProperties>
		</State>
		
		<State type="PRESSED">
			<SetProperties target="$textureName">
				<gotoAndStop>pressed</gotoAndStop>
			</SetProperties>
		</State>
		
		<State type="SELECTED">
			<SetProperties target="$textureName">
				<gotoAndStop>selected</gotoAndStop>
			</SetProperties>
		</State>
		
		<State type="SELECTED_OVER">
			<SetProperties target="$textureName">
				<gotoAndStop>selected_over</gotoAndStop>
			</SetProperties>
		</State>
		
		<State type="SELECTED_PRESSED">
			<SetProperties target="$textureName">
				<gotoAndStop>selected_pressed</gotoAndStop>
			</SetProperties>
		</State>
	</Button>
	
</radio>