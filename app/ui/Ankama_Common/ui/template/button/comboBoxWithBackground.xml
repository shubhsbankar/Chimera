<comboBoxWithBackground>
	
	<!-- Parametres du template  -->
	<Param name="name" />
	<Param name="width">180</Param>
	<Param name="height">38</Param>
	<Param name="Anchors" />
	<Param name="Hooks"><onSelectItem /></Param>
	<Param name="listTexture">[local.common]bg_listbox.png</Param>
	<Param name="buttonTexture">arrow_small_bottom</Param>
	<Param name="backgroundTexture">bg_small_border_light</Param>
	<Param name="autoSelectMode">0</Param>
	<Param name="rendererName"></Param>
	<Param name="rendererArgs">[local.css]combobox.css,,,[colors.combobox.over],,maincontainer</Param>
	<Param name="scrollBarCss">[local.css]scrollBar.css</Param>
	<Param name="maxHeight">300</Param>
	<Param name="strata">TOP</Param>
	<Param name="Content">null</Param>
    <Param name="visible">true</Param>
    <Param name="listWidth">NaN</Param>

	<Var name="cbWidth">#width - 14</Var>	
	<Var name="cbHeight">#height - 14</Var>
	<Var name="realSlotHeight">#height - 12</Var>
	<Var name="bg_name">'bg'+'#name'</Var>
	<Var name="bg_width">#width - 1</Var>
	<Var name="noContent">'#Content' == 'null'</Var>
	
	<TextureBitmap name="$bg_name">
		<Anchors>#Anchors</Anchors>
		<Size>
			<AbsDimension x="$bg_width" y="#height" />
		</Size>
		<themeDataId>#backgroundTexture</themeDataId>
        <visible>#visible</visible>
	</TextureBitmap>
	
	<ComboBox name="#name" strata="#strata">
		<Anchors>
			<Anchor relativeTo="$bg_name" point="TOPLEFT" relativePoint="TOPLEFT" >
				<AbsDimension x="7" y="7" />
			</Anchor>
		</Anchors>
		<Size>
			<AbsDimension x="$cbWidth" y="$cbHeight" />
		</Size>
        <visible>#visible</visible>
		<mouseEnabled>true</mouseEnabled>
		<autoSelectMode>#autoSelectMode</autoSelectMode>
		<buttonTexture>#buttonTexture</buttonTexture>
		<listTexture>#listTexture</listTexture>
		<rendererName>#rendererName</rendererName>
		<rendererArgs>#rendererArgs</rendererArgs>
		<scrollBarCss>#scrollBarCss</scrollBarCss>
		<slotHeight>$realSlotHeight</slotHeight>
		<maxHeight>#maxHeight</maxHeight>
		<mainContainerHeight>20</mainContainerHeight>
        <listWidth>#listWidth</listWidth>

		<Hooks>#Hooks</Hooks>
		
		<Container ignore="$noContent">
			#Content
		</Container>
	</ComboBox>
			
	
</comboBoxWithBackground>