<sortButton>
	<!-- Param du template -->	
	<Param name="Anchors" />
	<Param name="name" />
	<Param name="Size" />
	<Param name="bgColor" />
	<Param name="bgAlpha" />
	<Param name="Hooks"><onRelease /></Param>
	
	<!-- Variables internes au template -->	
	<Var name="btn_texture">'tx_' + '#name'</Var>
	
	
	<Button name="#name">
	    <Common>
	        <Anchors>
	        	#Anchors
	        </Anchors>
	
			<Texture name="$btn_texture">
				<Size>
					#Size
				</Size>
				<uri>[local.assets]tx_invisible</uri>
			</Texture>
			
			<bgColor>#bgColor</bgColor>			
			<bgAlpha>#bgAlpha</bgAlpha>
			
			<Hooks>#Hooks</Hooks>
	    </Common>
	</Button>
</sortButton>