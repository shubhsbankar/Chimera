<simpleTextRadioButton>
	
	<!-- Parametres du template -->
	<Param name="width" >100</Param>
	<Param name="height" >30</Param>
	<Param name="label">Text</Param>
	<Param name="name" />
	<Param name="Anchors" />
	<Param name="Hooks" />
	<Param name="css">[local.css]normal.css</Param>
	<Param name="radioGroup" />
	<Param name="radioMode" />
	
	<!-- Variables internes au template -->
	<Var name="labelWidth">#width - 4</Var>	
	<Var name="labelHeight">#height - 4</Var>	
	<Var name="labelName">'btn_lbl_' + '#name'</Var>
	
	<Button name="#name">
		<Common>
			<radioGroup>#radioGroup</radioGroup>
			<radioMode>#radioMode</radioMode>
			<Anchors>#Anchors</Anchors>
			
			<Label name="$labelName">
				<Size>
					<AbsDimension x="#width" y="#height" />
				</Size>
				<verticalAlign>center</verticalAlign>
				<text>#label</text>
				<css>#css</css>
				<verticalAlign>center</verticalAlign>
			</Label>
			
			<Hooks>#Hooks</Hooks>
		</Common>
		
		<State type="OVER">
			<SetProperties target="$labelName">
				<cssClass>over</cssClass>
			</SetProperties>
		</State>		
		<State type="PRESSED">
			<SetProperties target="$labelName">
				<cssClass>pressed</cssClass>
			</SetProperties>
		</State>
		<State type="SELECTED">
			<SetProperties target="$labelName">
				<cssClass>pressed</cssClass>
			</SetProperties>
		</State>
		<State type="DISABLED">
			<SetProperties target="$labelName">
				<cssClass>disabled</cssClass>
			</SetProperties>
		</State>
	</Button>
	
</simpleTextRadioButton>