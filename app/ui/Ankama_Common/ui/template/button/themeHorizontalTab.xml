<themeHorizontalTab>
	<!-- Param du template -->	
	<Param name="Anchors" />
	<Param name="name" />
	<Param name="text" />
	<Param name="Size" ><AbsDimension x="180" y="38" /></Param>
	<Param name="bgId" >htab_background</Param>
	<Param name="tooltipContent"></Param>
	
	<!-- Variables internes au template -->	
	<Var name="btn_texture">'tx_' + '#name'</Var>
	<Var name="btn_label">'lbl_' + '#name'</Var>
	
	
	<Var name="tabBgDisabledNormal">'#bgId' + '_disabled_normal'</Var>
	<Var name="tabBgDisabledOver">'#bgId' + '_disabled_over'</Var>
	<Var name="tabBgDisabledPressed">'#bgId' + '_disabled_pressed'</Var>	
	<Var name="tabBgSelectedNormal">'#bgId' + '_selected_normal'</Var>
	<Var name="tabBgSelectedOver">'#bgId' + '_selected_over'</Var>
	<Var name="tabBgSelectedPressed">'#bgId' + '_selected_pressed'</Var>
	
	
	<!-- button with background -->
	<Button name="#name">
	    <Common>
	        <radioGroup>tabHGroup</radioGroup>
	        <radioMode>true</radioMode>
			<tooltipContent>#tooltipContent</tooltipContent>
	        <Anchors>
	        	#Anchors
	        </Anchors>
	
			<TextureBitmap name="$btn_texture">
				<Size>
					#Size
				</Size>
				<themeDataId>$tabBgDisabledNormal</themeDataId>
			</TextureBitmap>

			<Label name="$btn_label">
				<Anchors>
					<Anchor>
						<AbsDimension x="0" y="0" />
					</Anchor>
				</Anchors>
				<Size>
					#Size
				</Size>
				<verticalAlign>center</verticalAlign>
				<cssClass>mediumcenter</cssClass>
				<css>[local.css]small2.css</css>
				<text>#text</text>
			</Label>
	        <Hooks>
	            <onRelease />
	        </Hooks>
	    </Common>
	    <State type="OVER">
			<SetProperties target="$btn_texture">
				<themeDataId>$tabBgDisabledOver</themeDataId>
			</SetProperties>
			<SetProperties target="$btn_label">
				<cssClass>greencenter</cssClass>
			</SetProperties>
		</State>
		
		<State type="PRESSED">
			<SetProperties target="$btn_texture">
				<themeDataId>$tabBgDisabledPressed</themeDataId>
			</SetProperties>
			<SetProperties target="$btn_label">
				<cssClass>greencenter</cssClass>
			</SetProperties>
		</State>
		
		<State type="SELECTED">
			<SetProperties target="$btn_texture">
				<themeDataId>$tabBgSelectedNormal</themeDataId>
			</SetProperties>
			<SetProperties target="$btn_label">
				<cssClass>greencenter</cssClass>
			</SetProperties>
		</State>
		
		<State type="SELECTED_OVER">
			<SetProperties target="$btn_texture">
				<themeDataId>$tabBgSelectedOver</themeDataId>
			</SetProperties>
			<SetProperties target="$btn_label">
				<cssClass>greencenter</cssClass>
			</SetProperties>
		</State>
		
		<State type="SELECTED_PRESSED">
			<SetProperties target="$btn_texture">
				<themeDataId>$tabBgSelectedPressed</themeDataId>
			</SetProperties>
			<SetProperties target="$btn_label">
				<cssClass>greencenter</cssClass>
			</SetProperties>
		</State>
	</Button>
	
</themeHorizontalTab>