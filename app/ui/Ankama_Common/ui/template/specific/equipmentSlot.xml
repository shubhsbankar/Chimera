<equipmentSlot>
	
	<!-- Parametres du template  -->
	<Param name="width">44</Param>
	<Param name="height">44</Param>
	<Param name="name" />
	<Var name="txName">'tx_' + '#name'</Var>
	<Param name="Anchors" />
    <Param name="allowDrag">true</Param>
    <Param name="isButton">true</Param>
	<Param name="emptyTexture">[config.ui.skin]texture/slot/slot_dark_background_empty.png</Param>
	<Param name="highlightTexture">[config.ui.skin]texture/slot/over.png</Param>
	<Param name="selectedTexture">[config.ui.skin]texture/slot/selected.png</Param>
	<Param name="acceptDragTexture">[config.ui.skin]texture/slot/acceptDrop.png</Param>
	<Param name="refuseDragTexture">[config.ui.skin]texture/slot/refuseDrop.png</Param>
	<Param name="timerTexture">[local.assets]timerSlot</Param>
	<Param name="backgroundTexture">[config.ui.skin]texture/slot/slot_dark_background_full.png</Param>
	
	<Texture name="$txName">
		<Anchors>#Anchors</Anchors>
		<Size>
			<AbsDimension x="#width" y="#height" />
		</Size>
		<uri>#backgroundTexture</uri>
		<autoGrid>true</autoGrid>
	</Texture>
						
	<Slot name="#name">
		<Anchors>#Anchors</Anchors>
		<Size>
			<AbsDimension x="#width" y="#height" />
		</Size>
        <allowDrag>#allowDrag</allowDrag>
        <isButton>#isButton</isButton>
		<emptyTexture>#emptyTexture</emptyTexture>
		<highlightTexture>#highlightTexture</highlightTexture>
		<selectedTexture>#selectedTexture</selectedTexture>
		<acceptDragTexture>#acceptDragTexture</acceptDragTexture>
		<refuseDragTexture>#refuseDragTexture</refuseDragTexture>
		<timerTexture>#timerTexture</timerTexture>
	</Slot>
			
	
</equipmentSlot>