<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Definition SYSTEM "../dtd/ui.dtd">
<Definition modal="true" labelDebug="false">

    <Import url="[config.mod.template]button/simpleButton.xml"/>
    <Import url="[config.mod.template]windowWithoutTitleBar.xml" />
    <Import url="mod://Ankama_Roleplay/xml/template/levelUpRewards.xml" />

    <Constants>
        <Constant name="assets" value="[config.ui.skin]assets.swf|"/>
        <Constant name="css" value="[config.ui.skin]css/"/>
        <Constant name="texture" value="[config.ui.skin]texture/"/>
        <Constant name="common" value="[config.ui.skin]common/"/>
        <Constant name="levelUp" value="[config.ui.skin]texture/levelup/"/>
    </Constants>

    <windowWithoutTitleBar bgThemeDataId="block_background_dark">
        <Anchors>
            <Anchor point="CENTER" relativePoint="CENTER">
                <AbsDimension y="100" />
            </Anchor>
        </Anchors>
        <Size>
            <AbsDimension x="420" y="230"/>
        </Size>
        <bgAlpha>1</bgAlpha>
        <noCloseButton>true</noCloseButton>
        <mouseEnabled>true</mouseEnabled>

        <Content>
            <levelUpRewards>
                <Anchors>
                    <Anchor relativePoint="BOTTOM" point="BOTTOM">
                        <AbsDimension x="3" y="-50"/>
                    </Anchor>
                </Anchors>
            </levelUpRewards>
        </Content>

        <BehindFrameContent>
            <TextureBitmap>
                <Anchors>
                    <Anchor relativePoint="TOP" point="BOTTOM">
                        <AbsDimension x="0" y="250"/>
                    </Anchor>
                </Anchors>
                <Size>
                    <AbsDimension x="663" y="423" />
                </Size>
                <uri>[local.texture]background/background_levelup_banner_omega.png</uri>
                <smooth>true</smooth>
            </TextureBitmap>
        </BehindFrameContent>
        
        <OverFrameContent>

            <!--La banniÃ¨re-->
            <TextureBitmap>
                <Anchors>
                    <Anchor relativePoint="TOP" point="BOTTOM">
                        <AbsDimension x="0" y="250"/>
                    </Anchor>
                </Anchors>
                <Size>
                    <AbsDimension x="663" y="423" />
                </Size>
                <uri>[local.texture]background/background_levelup_banner_omega_up.png</uri>
                <smooth>true</smooth>
            </TextureBitmap>

            <!-- Label "Niveau X !" -->
            <Label name="lbl_newLevel">
                <Anchors>
                    <Anchor relativePoint="TOP" point="TOP">
                        <AbsDimension x="0" y="-50"/>
                    </Anchor>
                </Anchors>
                <Size>
                    <AbsDimension x="200"/>
                </Size>
                <cssClass>levelupomega</cssClass>
                <css>[local.css]title.css</css>
                <forceUppercase>true</forceUppercase>
            </Label>

            <TextureBitmap name="tx_bg_button">
                <Anchors>
                    <Anchor relativePoint="BOTTOM" point="TOP">
                        <AbsDimension x="0" y="-19"/>
                    </Anchor>
                </Anchors>
                <Size>
                    <AbsDimension x="150" />
                </Size>
                <themeDataId>background_border_button</themeDataId>
            </TextureBitmap>

            <simpleButton name="btn_close_main">
                <Anchors>
                    <Anchor relativePoint="BOTTOM" point="TOP">
                        <AbsDimension x="0" y="-12" />
                    </Anchor>
                </Anchors>
                <Size>
                    <AbsDimension x="100" y="32" />
                </Size>
                <label>[ui.common.ok]</label>
            </simpleButton>

        </OverFrameContent>
    </windowWithoutTitleBar>
</Definition>
