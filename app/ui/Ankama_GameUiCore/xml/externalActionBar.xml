<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Definition SYSTEM "../dtd/ui.dtd">
<Definition>
	<Import url="[config.mod.template.button]themeIconButton.xml" />
	<Import url="[config.mod.template]specific/actionBar.xml" />

	<Constants>
		<Constant name="assets" value="[config.ui.skin]assets.swf|" />
		<Constant name="css" value="[config.ui.skin]css/" />
		<Constant name="texture" value="[config.ui.skin]texture/" />
	</Constants>
	
	<Container name="mainCtr">
		<Size>
			<AbsDimension x="505" y="90" />
		</Size>
		<visible>false</visible>
		
		<Container name="backgroundCtr">
			<Anchors>
				<Anchor relativePoint="TOPLEFT">
					<AbsDimension x="0" y="3" />
				</Anchor>
				<Anchor relativeTo="tx_rightBg" relativePoint="BOTTOMRIGHT">
					<AbsDimension x="8" y="8" />
				</Anchor>
			</Anchors>
			<bgColor>0</bgColor>
			<bgAlpha>0.7</bgAlpha>
		</Container>
			
		<Container>
			<Anchors>
				<Anchor relativeTo="tx_rightBg" relativePoint="TOPRIGHT">
					<AbsDimension x="6" y="0" />
				</Anchor>
			</Anchors>
			<Size>
				<AbsDimension x="24" />
				<RelDimension y="1" />
			</Size>
            
	        <TextureBitmap name="titleBar">
				<Size>
					<AbsDimension x="24" />
					<RelDimension y="1" />
				</Size>
				<themeDataId>floating_window_bar</themeDataId>
	            <dragController>true</dragController>
	            <dragTarget>mainCtr</dragTarget>
	            <dragBoundsContainer>mainCtr</dragBoundsContainer>
	            <useDragMagnetism>true</useDragMagnetism>
	        </TextureBitmap>
			
			<themeIconButton name="btn_minimize">
				<Anchors>
					<Anchor relativePoint="TOP" point="TOP">
						<AbsDimension x="0" y="2" />
					</Anchor>
				</Anchors>
				<Size>
					<AbsDimension x="20" y="20" />
				</Size>				
				<bgScaleX>0</bgScaleX>
				<iconUri>[local.texture]hud/icon_minus_floating_menu.png</iconUri>
			</themeIconButton>
			
			<themeIconButton name="btn_options">
					<Anchors>
						<Anchor relativePoint="BOTTOM" point="BOTTOM">
							<AbsDimension x="0" y="-4" />
						</Anchor>
					</Anchors>
				<Size>
					<AbsDimension x="20" y="20" />
				</Size>
				<bgScaleX>0</bgScaleX>
				<iconUri>[local.texture]hud/icon_arrow_floating_menu.png</iconUri>
			</themeIconButton>
		</Container>
		
		<actionBar name="actionBarCtr">
			<Anchors>
				<Anchor>
					<AbsDimension x="4" y="4" />
				</Anchor>
			</Anchors>
			<Size>
				<AbsDimension x="425" y="82" />
			</Size>
			<ignoreAddButton>true</ignoreAddButton>
		</actionBar>
	</Container>
</Definition>