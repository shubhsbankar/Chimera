                            </Anchors>
                            <Size>
                                <AbsDimension x="30" y="30" />
                            </Size>
                            <uri>[local.texture]icon_kama_shadow.png</uri>
                        </Texture>
                        <Label name="lbl_priceTitle">
                            <Anchors>
                                <Anchor>
                                    <AbsDimension x="0" y="30" />
                                </Anchor>
                            </Anchors>
                            <Size>
                                <AbsDimension x="220" y="16" />
