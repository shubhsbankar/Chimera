                        <AbsDimension x="0" y="-25" />
                    </Anchor>
                </Anchors>
                <Size>
                    <AbsDimension x="480" y="50" />
                </Size>
                <Texture>
                    <Anchors>
                        <Anchor relativePoint="BOTTOMLEFT" point="BOTTOMLEFT">
                            <AbsDimension x="17" y="0" />
                        </Anchor>
                    </Anchors>
                    <Size>
