                                </Anchors>
                                <Size>
                                    <AbsDimension x="35" y="35" />
                                </Size>
                            </Texture>
                            <Label name="lbl_itemName">
                                <Anchors>
                                    <Anchor>
                                        <AbsDimension x="45" y="11" />
                                    </Anchor>
                                </Anchors>
                                <Size>
                                    <AbsDimension x="240" y="16" />
                                </Size>
                                <cssClass>left</cssClass>
                                <css>[local.css]normal2.css</css>
                                <useStyleSheet>false</useStyleSheet>
                                <hyperlinkEnabled>true</hyperlinkEnabled>
                            </Label>
                            <Label name="lbl_itemQuantity">
                                <Anchors>
                                    <Anchor>
                                        <AbsDimension x="285" y="11" />
                                    </Anchor>
                                </Anchors>
                                <Size>
                                    <AbsDimension x="50" y="16" />
                                </Size>
                                <cssClass>center</cssClass>
                                <css>[local.css]normal2.css</css>
                            </Label>
                        </Container>
                    </Container>

                    <Container>
                        <Anchors>
                            <Anchor relativeTo="ctr_itemInfo" point="TOPLEFT" relativePoint="BOTTOMLEFT">
                                <AbsDimension x="45" y="15" />
                            </Anchor>
                        </Anchors>
                        <Size>
                            <AbsDimension x="350" y="150" />
                        </Size>

                        <Label name="lbl_unityPriceTitle">
                            <Anchors>
                                <Anchor>
                                    <AbsDimension x="0" y="0" />
                                </Anchor>
                            </Anchors>
                            <Size>
                                <AbsDimension x="220" y="16" />
                            </Size>
                            <text>[ui.common.unitPrice]</text>
                            <cssClass>left</cssClass>
                            <css>[local.css]normal2.css</css>
                        </Label>
                        <Label name="lbl_unityPrice">
                            <Anchors>
                                <Anchor>
                                    <AbsDimension x="220" y="0" />
                                </Anchor>
                            </Anchors>
                            <Size>
                                <AbsDimension x="100" y="16" />
