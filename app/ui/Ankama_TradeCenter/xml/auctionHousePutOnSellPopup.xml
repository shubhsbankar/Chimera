                    </Size>
                    <uri>[local.common]corner_decoration.png</uri>
                </Texture>
                <Texture>
                    <Anchors>
                        <Anchor relativePoint="BOTTOMRIGHT" point="BOTTOMRIGHT">
                            <AbsDimension x="105" y="0" />
                        </Anchor>
                    </Anchors>
                    <Size>
                        <AbsDimension x="120" y="75" />
                    </Size>
                    <scaleX>-1</scaleX>
                    <uri>[local.common]corner_decoration.png</uri>
                </Texture>
                <simpleButton label="[ui.common.yes]" name="btn_yes">
                    <Anchors>
                        <Anchor>
                            <AbsDimension x="75" y="0" />
                        </Anchor>
                    </Anchors>
                    <Size>
                        <AbsDimension x="150" y="32" />
                    </Size>
                </simpleButton>
                <Texture>
                    <Anchors>
                        <Anchor relativeTo="btn_yes">
                            <AbsDimension x="5" y="1" />
                        </Anchor>
                    </Anchors>
                    <Size>
                        <AbsDimension x="30" y="30" />
                    </Size>
                    <uri>[local.texture]icon_true.png</uri>
                </Texture>
                <simpleButton label="[ui.common.no]" name="btn_no">
                    <Anchors>
                        <Anchor>
                            <AbsDimension x="255" y="0" />
                        </Anchor>
                    </Anchors>
                    <Size>
                        <AbsDimension x="150" y="32" />
                    </Size>
                </simpleButton>
                <Texture>
                    <Anchors>
                        <Anchor relativeTo="btn_no">
                            <AbsDimension x="5" y="1" />
                        </Anchor>
                    </Anchors>
                    <Size>
                        <AbsDimension x="30" y="30" />
