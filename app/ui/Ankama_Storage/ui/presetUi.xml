<?xml version="1.0" encoding="UTF-8"?>
<Definition usePropertiesCache="false" labelDebug="false">

	<Import url="[config.mod.template.button]themeIconButton.xml" />
	<Import url="[config.mod.template.button]simpleSlot.xml" />
	<Import url="[config.mod.template.button]simpleButton.xml" />
	<Import url="[config.mod.template]block.xml" />

	<Constants>
		<Constant name="assets" value="[config.ui.skin]assets.swf|" />
		<Constant name="css" value="[config.ui.skin]css/" />
		<Constant name="bitmap" value="[config.ui.skin]bitmap/" />
		<Constant name="common" value="[config.ui.skin]common/" />
		<Constant name="texture" value="[config.ui.skin]texture/" />

		<Constant name="illus" value="[config.content.path]gfx/illusUi/" />
		<Constant name="iconsUri" value="[config.content.path]gfx/presets/icons.swf|" />
	</Constants>

	<block bgAlpha="1" name="ctr_main">
		<Size>
			<AbsDimension x="330" y="715" />
		</Size>
		<mouseEnabled>true</mouseEnabled>

		<Content>

			<Grid name="gd_presets">
				<Anchors>
					<Anchor>
						<AbsDimension x="5" y="5" />
					</Anchor>
				</Anchors>
				<Size>
					<AbsDimension x="310" y="100" />
				</Size>
				<slotWidth>48</slotWidth>
				<slotHeight>48</slotHeight>
				<autoSelectMode>0</autoSelectMode>
				<rendererName>SlotGridRenderer</rendererName>
				<rendererArgs>[local.texture]slot/emptySlot.png,[local.texture]slot/over.png,[local.texture]slot/selected.png,[local.texture]slot/acceptDrop.png,[local.texture]slot/refuseDrop.png,,[local.css]normal2.css
				</rendererArgs>
				<verticalScrollbarCss>[local.css]scrollBar.css</verticalScrollbarCss>
				<scrollDisplay>always</scrollDisplay>
				<Hooks>
					<onSelectItem />
					<onItemRollOver />
					<onItemRollOut />
					<onItemRollOut />
				</Hooks>
			</Grid>

			<simpleButton label="[ui.common.new]" name="btn_new"
				strata="TOP">
				<Anchors>
					<Anchor point="TOP" relativePoint="TOP">
						<AbsDimension x="0" y="110" />
					</Anchor>
				</Anchors>
				<Size>
					<AbsDimension x="150" y="32" />
				</Size>
			</simpleButton>


			<Label name="lbl_explanation">
				<Anchors>
					<Anchor point="TOP" relativePoint="TOP">
						<AbsDimension x="0" y="140" />
					</Anchor>
				</Anchors>
				<Size>
					<AbsDimension x="242" y="400" />
				</Size>
				<css>[local.css]normal2.css</css>
				<cssClass>center</cssClass>
				<multiline>true</multiline>
				<wordWrap>true</wordWrap>
				<verticalAlign>center</verticalAlign>
				<text>[ui.preset.howToUse]</text>
			</Label>

			<Container name="ctr_bottom">
				<Size>
					<RelDimension x="1" />
				</Size>
				
				<block>
					<Anchors>
						<Anchor>
							<AbsDimension x="0" y="150" />
						</Anchor>
					</Anchors>

					<Size>
						<RelDimension x="1" />
						<AbsDimension y="510" />
					</Size>

					<Content>
						<Label name="lbl_title">
							<Anchors>
								<Anchor>
									<AbsDimension x="0" y="5" />
								</Anchor>
							</Anchors>
							<Size>
								<AbsDimension x="320" y="16" />
							</Size>
							<cssClass>center</cssClass>
							<css>[local.css]normal2.css</css>
						</Label>
						
						<Grid name="gd_items">
							<Anchors>
								<Anchor>
									<AbsDimension x="37" y="40" />
								</Anchor>
							</Anchors>
							<Size>
								<AbsDimension x="245" y="308" />
							</Size>
							<slotWidth>56</slotWidth>
							<slotHeight>56</slotHeight>
							<autoSelectMode>0</autoSelectMode>
							<rendererName>InlineXmlGridRenderer</rendererName>
							<rendererArgs>updateItems</rendererArgs>
							<Container>
								<Size>
									<AbsDimension x="56" y="56" />
								</Size>
								<Button name="btn_item">
									<Common>
										<TextureBitmap name="tx_bg">
											<Size>
												<AbsDimension x="56" y="56" />
											</Size>
											<uri>[local.texture]slot/slot_big_dark_background_full.png</uri>
											<smooth>true</smooth>
										</TextureBitmap>

										<Texture name="tx_item">
											<Size>
												<AbsDimension x="56" y="56" />
											</Size>
										</Texture>

										<Texture name="tx_over">
											<Size>
												<AbsDimension x="56" y="56" />
											</Size>
											<uri>[local.texture]slot/over.png</uri>
											<visible>false</visible>
										</Texture>

										<Texture name="tx_selected">
											<Size>
												<AbsDimension x="56" y="56" />
											</Size>
											<uri>[local.texture]slot/selected.png</uri>
											<visible>false</visible>
										</Texture>
										
									</Common>
 									<State type="OVER">
										<SetProperties target="tx_over">
											<visible>true</visible>
										</SetProperties>
									</State>
 									<State type="SELECTED">
										<SetProperties target="tx_over">
											<visible>false</visible>
										</SetProperties>
									</State>
								</Button>
										
								<themeIconButton name="btn_deleteItem">
									<Anchors>
										<Anchor>
											<AbsDimension x="38" y="0" />
										</Anchor>
									</Anchors>
									<Size>
										<AbsDimension x="20" y="20" />
									</Size>
									<iconUri>[local.texture]btnIcon/btnIcon_cross.png</iconUri>
									<visible>false</visible>
								</themeIconButton>
							</Container>

							<Hooks>
								<onSelectItem />
								<onItemRollOver />
								<onItemRollOut />
							</Hooks>
						</Grid>
						
						
						

						<Label>
							<Anchors>
								<Anchor>
									<AbsDimension x="5" y="350" />
								</Anchor>
							</Anchors>
							<Size>
								<AbsDimension x="300" y="20" />
							</Size>
							<cssClass>center</cssClass>
							<css>[local.css]small2.css</css>
							<text>[ui.option.tabPic]</text>
						</Label>

						<Container>
							<Anchors>
								<Anchor>
									<AbsDimension x="5" y="375" />
								</Anchor>
							</Anchors>
							
							<Texture>
								<Size>
									<AbsDimension x="300" y="118" />
								</Size>
								<uri>[local.texture]tx_parchment.jpg</uri>
							</Texture>							
	
							<Grid name="gd_icons">
								<Anchors>
									<Anchor>
										<AbsDimension x="10" y="5" />
									</Anchor>
								</Anchors>
								<Size>
									<AbsDimension x="275" y="108" />
								</Size>
								<verticalScrollbarCss>[local.css]scrollBar.css</verticalScrollbarCss>
								<scrollDisplay>always</scrollDisplay>
								<rendererName>InlineXmlGridRenderer</rendererName>
								<rendererArgs>updateIcon</rendererArgs>
								<slotWidth>36</slotWidth>
								<slotHeight>36</slotHeight>
								<hPadding>0</hPadding>
	
								<Container>
									<Size>
										<AbsDimension x="36" y="36" />
									</Size>
									<Button name="btn_icon">
										<radioMode>true</radioMode>
										<radioGroup>presetIconGroup</radioGroup>
										<Common>
											<Texture name="tx_selected">
												<Size>
													<AbsDimension x="36" y="36" />
												</Size>
												<uri>[local.texture]slot/selected.png</uri>
												<visible>false</visible>
											</Texture>
											<Texture name="tx_icon">
												<Anchors>
													<Anchor>
														<AbsDimension x="0" y="0" />
													</Anchor>
												</Anchors>
												<Size>
													<AbsDimension x="36" y="36" />
												</Size>
												<luminosity>1</luminosity>
											</Texture>
											<Hooks>
												<onSelectItem />
											</Hooks>
											<cacheAsBitmap>true</cacheAsBitmap>
										</Common>
										<State type="OVER">
											<SetProperties target="tx_icon">
												<luminosity>1.5</luminosity>
											</SetProperties>
											<SetProperties target="tx_selected">
												<visible>false</visible>
											</SetProperties>
										</State>
										<State type="SELECTED">
											<SetProperties target="tx_icon">
												<luminosity>1.5</luminosity>
											</SetProperties>
											<SetProperties target="tx_selected">
												<visible>true</visible>
											</SetProperties>
										</State>
									</Button>
	
								</Container>
	
								<Hooks>
									<onSelectItem />
								</Hooks>
							</Grid>
						</Container>

					</Content>
				</block>
						
						
				<Container>
					<Anchors>
						<Anchor>
							<AbsDimension x="0" y="665" />
						</Anchor>
					</Anchors>

					<themeIconButton name="btn_update">
						<Anchors>
							<Anchor>
								<AbsDimension x="42" y="2" />
							</Anchor>
						</Anchors>
						<Size>
							<AbsDimension x="28" y="28" />
						</Size>
						<iconUri>[local.texture]btnIcon/btnIcon_update.png</iconUri>
					</themeIconButton>

					<themeIconButton name="btn_delete">
						<Anchors>
							<Anchor>
								<AbsDimension x="250" y="2" />
							</Anchor>
						</Anchors>
						<Size>
							<AbsDimension x="28" y="28" />
						</Size>
						<iconUri>[local.texture]btnIcon/btnIcon_trash.png</iconUri>
					</themeIconButton>

					<simpleButton label="[ui.common.save]" name="btn_save">
						<Anchors>
							<Anchor>
								<AbsDimension x="85" y="0" />
							</Anchor>
						</Anchors>
						<Size>
							<AbsDimension x="150" y="32" />
						</Size>
					</simpleButton>
				</Container>

			</Container>
		</Content>
	</block>
</Definition>

